import java.util.Scanner;

class Employee {
    String name;
    public Employee(String name) {
        this.name = name;
    }
    public void getDetail() {
        System.out.println(name + " is an employee");
    }
}

class Manager extends Employee {
    String department;
    public Manager(String name, String department) {
        super(name);
        this.department = department;
    }
    @Override
    public void getDetail() {
        System.out.println(name + " is a manager in " + department);
    }
}

class Director extends Manager {
    double budget;
    public Director(String name, String department, double budget) {
        super(name, department);
        this.budget = budget;
    }
    @Override
    public void getDetail() {
        System.out.println(name + " is a director of " + department + " with a budget of " + budget);
    }
}

class Main {
    public static void main(String[] args) {
        System.out.println("Enter no of employees ");
        Scanner sc = new Scanner(System.in);
        Integer no_of_employees = sc.nextInt();
        System.out.println(no_of_employees);

        Employee employee = new Employee("John");
        Manager manager = new Manager("Sarah", "HR");
        Director director = new Director("Micheal", "IT", 100000);

        employee.getDetail();
        manager.getDetail();
        director.getDetail();
    }
}
